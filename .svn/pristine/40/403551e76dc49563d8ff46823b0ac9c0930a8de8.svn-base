<script>
	export default {
		data() {
			return {
				spanLeft: 5,
				spanRight: 19,
				adminmenulist:JSON.parse(localStorage.getItem("adminmenus")),
				isadmin:JSON.parse(localStorage.getItem("usrinfo")).isadmin,
				userName:JSON.parse(localStorage.getItem("usrinfo")).usrname
			}
		},
		computed: {
			iconSize() {
				return this.spanLeft === 5 ? 14 : 24;
			},
			setActive() {
				return this.$route.path.replace('/', '');
			}
		},
		methods: {
			backindex() {
				this.$router.push('./index')
			},
			exitLogin(){
				this.$router.push('/login');	
				document.location.reload();
			},
			gomessageList(){
				this.$router.push('./messageList')
			},
			admingeneratemenuid(flow,node,page){
			    return '/' + flow + '|' + node + '|' + page;
			},
			toggleClick() {
				if(this.spanLeft === 5) {
					this.spanLeft = 1;
					this.spanRight = 23;
				} else {
					this.spanLeft = 5;
					this.spanRight = 19;
				}
			},
			routeTo(e) {//点击树节点的事件
				delCookie('parent')
				this.$router.push(e);
			}
		},
		mounted:function(){
			
		}
	}
	//删除cookie
	function delCookie(name){
		var exp = new Date();
		exp.setTime(exp.getTime() - 1);
		var cval=getCookie(name);
		if(cval!=null)
		document.cookie= name + "="+cval+";expires="+exp.toGMTString();
	}
	
	//获取cookie
	function getCookie(name){
		var arr,reg=new RegExp("(^| )"+name+"=([^;]*)(;|$)");
		if(arr=document.cookie.match(reg)){
			return unescape(arr[2]);
		}else{
			return null;
		}
	}
</script>
